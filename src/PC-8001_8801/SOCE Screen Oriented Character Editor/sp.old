ADJPNT:  ;DIVIDE POINTR INTO (POINTR POSITION)
 LD HL,(POINTR)
 LD A,EOL
 LD BC,0
 DEC HL
 CPDR
 LD (POINTR),++HL
 INC BC
 LD A,C
 NEG
 LD (POSITION),A
 RET
