	SBC	HL,DE		; THEN BRINK
	LD	A,2
	CALL	Z,DISPATR
	IF	FILEVER
	LD	A,(MARKFLG)
	CP	3
	JR	NZ,DS23
	POP	HL
	PUSH	HL
	EX	DE,HL
	LD	HL,(MARKB)
	OR	A
	SBC	HL,DE
	JR	Z,DS225
	JR	NC,DS23
