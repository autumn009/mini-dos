	KEEP	HL,BC
	CALL	DISPBAR
	JR	DS135
DS13:
	CALL	DISPBAR2
DS135:	LD	A,(IX+1)
	CP	C
	JR	Z,DS14
	DEC	C
	JR	DS13
DS14:
	KEEPOUT
	INC	C		;FROM NEXT LINE
