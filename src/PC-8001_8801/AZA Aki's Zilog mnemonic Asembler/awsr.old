;
;HWSR V0.3 FOR AZA V3.3 (DIVIDE 1024/128)
;
APOINT:	DEFW	ZZZZZZ
UPOINT:	DEFW	0
IDPOS:	DEFW	0
VALUE:	DEFW	0
;
LASTLINK:	DEFW	0
;
;INPUTS
;HL: POINT TEXT BEGIN
;OUTPUTS
;HL: NEXT POSITION OF TEXT
;BC: ANSWER NUMBER
;IF BC=FFFFH THEN NOT FOUND AND KEEP
;
	IF	FILEVER
WSRIDXS	EQU	1024*2
	ELSE
WSRIDXS	EQU	128*2
	ENDIF
;
CLEAR:	LD	HL,(ENDARE)
	LD	DE,80
	OR	A
	SBC	HL,DE
	LD	(LIMIT_AREA),HL
	LD	HL,(WRKTOP)
	LD	(AS_WRKTOP_KINDAN),HL
	LD	BC,WSRIDXS
CLEAR1:	LD	(HL),0
	INC	HL
	DEC	BC
	LD	A,B
	OR	C
	JR	NZ,CLEAR1
	LD	(APOINT),HL
	EX	AF,AF'
	LD	HL,INDEX
	EXX
	LD	IY,FIXED
CLEAR2:	CALL	WSR
	LD	A,C
	CPL
	OR	B
	RET	Z
	LD	A,B
	OR	A
	JR	Z,CLEAR2
	LD	IX,(IDPOS)
	EX	AF,AF'
	INC	A
	LD	(IX+0),A
	EX	AF,AF'
	EXX
	LD	E,(HL+)
	LD	D,(HL+)
	LD	(IX+1),E
	LD	(IX+2),D
	EXX
	CALL	FREEZE
	JR	CLEAR2
;
FREEZE:	KEEP	HL,DE,AF
;        LD      DE,(UPOINT)
;        LD      HL,(APOINT)
;        OR      A
;        SBC     HL,DE
;        JP      Z,INTERR
	LD	DE,(APOINT)
	LD	HL,(LASTLINK)
	LD	(HL),E
	INC	HL
	LD	(HL),D
	LD	HL,(UPOINT)
	LD	(APOINT),HL
	KEEPOUT
	RET
;
UNFREZ:	LD	HL,(APOINT)
	LD	(UPOINT),HL
	RET
;
;
WSRXX:	KEEP	AF,DE
	CALL	WSR
	KEEPOUT
	RET
;
SKPW10:	
	INC	IY
SSKIP_WSR:	
	LD	A,(IY+0)
	CP	32
	JR	Z,SKPW10
	CP	9
	JR	NZ,WSRS0
	JR	SKPW10
;
WSR:	
	LD	A,(IY+0)
WSRS0:	
; to TESTAZ:
	CP	"@"
	JR	C,SCH10
	CP	"Z"+1
	JR	C,SCH100
; to UPPER:
        CP      "a"
	JR	C,SCH20
	CP	"z"+1
	JR	NC,SCH20
	SUB	32
	JR	SCH100
SCH10:	CP	"."
	JR	Z,SCH100
SCH20:	INC	IY
	LD	C,A		;"if not alpha-numeric
	XOR	A
	LD	B,A		;" then answer is ascii code
	RET			;RET with NC flag
;
SCH100:	PUSH	IY
	POP	HL
	EX	DE,HL
	LD	HL,(APOINT)
	LD	C,A
	LD	B,0
	LD	(HL+),B		;IS (B 0)
	LD	(HL+),B
	LD	(TARG_TOP),HL
	LD	(HL+),C
        EX      DE,HL
	INC	HL
;2ND OR AFTER THAT
;
SCH200:	LD	A,(HL)
;
;TESTAN (ALPHA NUMERIC)
	CP	"@"
	JR	C,SCH215
	CP	"Z"+1
	JR	C,SCH220
SCH215:	CP	"0"
	JR	C,SCH216
	CP	"9"+1
	JR	C,SCH220
SCH216:	CP	"_"
	JR	Z,SCH220
	CP	"."
	JR	Z,SCH220
; to UPPER:
	CP	"a"
	JR	C,SCH210
	CP	"z"+1
	JR	NC,SCH210
	SUB	32
	JR	SCH220
SCH210:	CP	"$"
	JR	Z,SCH220
	CP	"?"
	JR	NZ,SCH300
SCH220:	LD	(DE),A
; CALICULATE HASH CODE
;        RL      C
;        RL      B
;        RR      C
;
	ADD	A,C
	LD	C,A
;
;        LD      A,0
;        ADC     A,B
;        LD      B,A
;
	RL	B
;
;        LD      A,0
;        ADC     A,C
;        LD      C,A
;
;        LD      A,B
;        LD      B,C
;        LD      C,A
;
	INC	HL
	INC	DE
	JR	SCH200
;
SCH300:
;AND MORE CALC HASH
	PUSH	HL
	POP	IY
LIMIT_AREA	EQU	$+1
	LD	HL,0		;KINDAN NO TECHNIC
; OR A  ;DAIJOUBU NE! HITOTSU ZURE
	SBC	HL,DE
	JP	C,OUTIDT
;
	IF	FILEVER
	LD	A,B
	AND	$03
	LD	B,A
	ELSE
	LD	A,C
	AND	$7F
	LD	C,A
	LD	B,0
	ENDIF
;
	EX	DE,HL
	DEC	HL
	LD	A,(HL)
	OR	$80
	LD	(HL+),A
	LD	(HL),$F0
	LD	(IDPOS),HL
	INC	HL++
	LD	(UPOINT),HL
;
	LD	L,C
	LD	H,B
	ADD	HL,HL
AS_WRKTOP_KINDAN	EQU	$+1
	LD	DE,0
	ADD	HL,DE
	LD	(LASTLINK),HL
	LD	A,(HL+)
	LD	H,(HL)
	LD	L,A
	JR	SCH400
;
SCHNEXT:	
	LD	L,C
	LD	H,B
;
SCH400:	LD	A,L
	OR	H
	JP	Z,NOTFND
	LD	(LASTLINK),HL
	LD	C,(HL+)
	LD	B,(HL+)
TARG_TOP	EQU	$+1	;KINDAN
	LD	DE,0
;
SCH500:	LD	A,(DE)
	CP	(HL)
	JR	NZ,SCHNEXT
	INC	DE
	INC	HL
	OR	A
	JP	P,SCH500
;
	LD	B,1
	LD	C,(HL+)
	LD	E,(HL+)
	LD	D,(HL)
	LD	(VALUE),DE
SCHEEE:	SCF			;NAME
	RET
;
NOTFND:
	LD	BC,$FFFF
	JR	SCHEEE
;
;
; END OF INCLUDED MODULE 'awsr.aza'
